            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp">

                    <ImageView
                        android:id="@id/layout_adv_for_tt_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:id="@id/layout_adv_for_tt_image_view_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tmp_right_bottom_layout"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/sh_border_for_adv_logo"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:gravity="center_vertical"
                        android:layout_height="14dp">
                        <ImageView
                            android:id="@+id/iv_adv_flag_image"
                            android:layout_width="11dp"
                            android:layout_height="7dp"
                            android:contentDescription="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ad_logo_baidu_big" />
                        <TextView
                            android:id="@+id/iv_adv_flag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:lines="1"
                            android:text="广告"
                            android:textColor="#ffffff"
                            android:textSize="8dp" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@id/layout_adv_for_tt_bottom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/layout_adv_for_tt_icon_iv"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:contentDescription="@null"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/iv_adv_look_info"
                        android:layout_width="46dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/sh_border_for_adv_detail"
                        android:gravity="center"
                        android:singleLine="true"
                        android:tag="sx:sh_border_for_adv_detail:background|sx:col_btn_adv_normal:textColor"
                        android:text="查看详情"
                        android:textColor="@color/col_btn_adv_normal"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/layout_adv_for_tt_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="7dp"
                        android:layout_toLeftOf="@id/iv_adv_look_info"
                        android:layout_toRightOf="@id/layout_adv_for_tt_icon_iv"
                        android:lineSpacingExtra="5dp"
                        android:maxLines="2"
                        android:gravity="center_vertical"
                        android:tag="sx:col_tv_adv_normal:textColor"
                        android:text="想看什么？\n告诉我"
                        android:textColor="@color/col_tv_adv_normal"
                        android:textSize="14dp" />

                </RelativeLayout>

            </LinearLayout>